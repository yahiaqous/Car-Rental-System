<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="user_form_list_smart_button" model="ir.ui.view">
        <field name="name">reservation.button</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button name="get_reserved_cars" type="object" icon="fa-car">
                    <field string="Reserved Cars" name="reserved_cars_count" widget="statinfo" />
                </button>
            </div>

        </field>
    </record>


</odoo>